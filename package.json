{
  "name": "grue",
  "version": "1.0.0",
  "description": "Grue Project",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aravindet/grue.git"
  },
  "scripts": {
    "test": "jest",
    "build": "rm -rf dist && babel src -d dist --ignore 'src/example-client/**','src/example-client/**','src/**/*.test.js'",
    "server": "nodemon --exec babel-node src/example-server",
    "client": "cd src/example-client && SKIP_PREFLIGHT_CHECK=true react-scripts start",
    "example": "(yarn client &) && yarn server",
    "format": "prettier --write '{src,scripts,docs}/**/*.{js,css,html,json,md}' && eslint --fix src"
  },
  "workspaces": [
    "src/*"
  ],
  "private": true,
  "author": "aravindet",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aravindet/grue/issues"
  },
  "homepage": "https://github.com/aravindet/grue#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/runtime": "^7.1.2",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.4.2",
    "eslint": "^5.4.0",
    "eslint-config-prettier": "^4.1.0",
    "globby": "^9.0.0",
    "husky": ">=1",
    "jest": "^23.4.2",
    "lint-staged": ">=8",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4"
  },
  "dependencies": {
    "lodash": "^4.17.11"
  },
  "husky": {
    "hooks": {
      "precommit": "echo 'about to commit'"
    }
  },
  "lint-staged": {
    "./**/*.{js,css,html,json,md}": [
      "prettier --write",
      "git add"
    ],
    "./**/*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
